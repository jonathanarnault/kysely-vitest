{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"files": {
		"includes": [
			"*.{json,md,yaml}",
			".vscode/*.json",
			".github/**/*.{yml,md}",
			"packages/*/*.{json,ts}",
			"packages/*/migrations/*.js",
			"packages/*/src/**/*.ts"
		]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {}
				}
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	}
}
